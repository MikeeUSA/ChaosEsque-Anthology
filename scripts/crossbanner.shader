crossbanner5pcolor
{
	qer_editorimage textures/crossbanner5pcolor
	deformVertexes wave 50.0 sin 2 2 0.25 0.2
	{
		map textures/crossbanner5pcolor
	}
	{
		map $lightmap
		blendfunc filter
	}
}

